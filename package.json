{
  "name": "webpackstarter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Yaroslav",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --open --config webpack.dev.js",
    "staging": "rimraf staging && webpack -p --config webpack.staging.js",
    "prod": "rimraf dist && webpack -p --config webpack.prod.js",
    "prod:netlify": "rimraf dist && webpack -p --config webpack.prod.js",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.js",
    "lint:css": "stylelint src/**/*.scss",
    "server:staging": "http-server staging -o",
    "server:prod": "http-server dist -o"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-webpack-plugin": "^0.10.1",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "css-loader": "^0.28.9",
    "babel-preset-es2015": "^6.24.1",
    "copy-webpack-plugin": "^4.3.1",
    "html-critical-webpack-plugin": "^1.1.0",
    "html-webpack-plugin": "^2.30.1",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "style-loader": "^0.19.1",
    "file-loader": "^1.1.6",
    "html-loader": "^0.5.5",
    "http-server": "^0.11.1",
    "image-webpack-loader": "^4.0.0",
    "jquery": "^3.3.1",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.10",
    "postcss-sort-alphabetically": "^1.1.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "owl.carousel": "^2.2.0",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  }
}
